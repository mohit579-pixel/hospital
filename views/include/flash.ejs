<% if(success && success.length){ %>
    <div class="alert alert-warning alert-dismissible fade show col-6 offset-3  text-light"
    role="alert" style="background-color: black; display:none">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    
    <% if(error && error.length){ %>
        <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="background-color: black; display:none">
            <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>